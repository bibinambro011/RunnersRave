<script>
   function updateQuantity(productId,price, quantity) {
        // Update quantity display
        const qtyElement = document.getElementById(`qty-${productId}`);
        qtyElement.textContent = quantity;
        qtyElement.innerText = quantity;

        // Update total price
        const sellingPrice = parseFloat(document.getElementById(`total-price-${productId}`).textContent.slice(1)); 
        const totalPriceElement = document.getElementById(`total-${productId}`);
         totalPriceElement.textContent = (sellingPrice * quantity)
        totalPriceElement.innerHTML=(price * quantity);
        const total=(price * quantity);
       
        const updatedCartItem = {
              productId: productId,
              quantity: quantity,
              total:total
};
updateCartItemInDatabase(updatedCartItem)

    }

    function increaseQuantity(productId,price) {
        const qtyElement = document.getElementById(`qty-${productId}`);
        let quantity = parseInt(qtyElement.textContent, 10);
        quantity++;
        updateQuantity(productId,price, quantity);
       
    }

    function decreaseQuantity(productId,price) {
        const qtyElement = document.getElementById(`qty-${productId}`);
        let quantity = parseInt(qtyElement.textContent, 10);
        if (quantity > 1) {
            quantity--;
            updateQuantity(productId,price, quantity);
            
        }
    }
    
    
    function updateCartItemInDatabase(cartItem) {
        // Replace with your actual API endpoint for updating cart items
        const apiUrl = '/cartUpdate';
    
        fetch(apiUrl, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(cartItem)
        })
        .then(response => response.json())
        .then(data => {
            console.log('Cart item updated successfully:', data);
        })
        .catch(error => {
            console.error('Error updating cart item:', error);
        });
    }
    </script>
     

   