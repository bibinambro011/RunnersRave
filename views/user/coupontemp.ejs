<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Coupon Code Web Design</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="style.css">
    <style>
      /* Reset default margin and padding */
      * {
        margin: 100;
        padding: 20;
        box-sizing: border-box;
        font-family: 'poppins', sans-serif;
      }

      body {
        background: #f0fff3;
      }

      .container {
        display: flex;
        flex-direction: column; /* Display coupons vertically */
        align-items: center;
        justify-content: flex-start; /* Align coupons to the top */
        height: 100vh;
        padding-top: 20px; /* Add spacing to the top of the container */
      }

      .coupon-card {
        background: linear-gradient(135deg, #7158fe, #9d4de6);
        color: #fff;
        text-align: center;
        padding: 40px 20px; /* Reduced horizontal padding */
        border-radius: 15px;
        box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.15);
        margin: 10px; /* Added margin between coupons */
        width: 100%; /* Ensure full width */
      }

      .logo {
        width: 80px;
        border-radius: 8px;
        margin-bottom: 20px;
      }

      .coupon-card h3 {
        font-size: 28px;
        font-weight: 400;
        line-height: 40px;
      }

      .coupon-card p {
        font-size: 15px;
      }

      .coupon-row {
        display: flex;
        flex-direction: column; /* Display coupon code and button vertically */
        align-items: center;
        margin: 10px auto;
      }

      #cpnCode {
        border: 1px dashed #fff;
        padding: 10px 20px;
        border-right: 0;
      }

      #cpnBtn {
        border: 1px solid #fff;
        background: #fff;
        padding: 10px 20px;
        color: #7158fe;
        cursor: pointer;
        margin-top: 10px; /* Added margin */
      }

      .circle1,
      .circle2 {
        background: #f0fff3;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        position: absolute;
      }

      .circle1 {
        top: -25px;
        left: 50%;
        transform: translateX(-50%);
      }

      .circle2 {
        bottom: -25px;
        left: 50%;
        transform: translateX(-50%);
      }
    </style>
  </head>
  <body>
    <div class="container">
      <% allCoupon.forEach(function(coupon) { %>
      <div class="coupon-card">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTfeqAvgTCYPATVcME0DmI2Mct8SRSOYuuM4g&usqp=CAU" class="logo">
        <h3><%= coupon.discountPercentage %>% <%= coupon.couponDiscription %> off<br>using  Credit Card</h3>
        <div class="coupon-row">
          <span id="cpnCode"><%= coupon.couponCode %></span>
          <span id="cpnBtn">Copy Code</span>
        </div>
        <p>Valid Till:<%= coupon.validFor %></p>
       
      </div>
      <% }); %>
    </div>
    <script>
      var cpnBtns = document.querySelectorAll("#cpnBtn");
      var cpnCodes = document.querySelectorAll("#cpnCode");

      cpnBtns.forEach(function(cpnBtn, index) {
        cpnBtn.onclick = function() {
          navigator.clipboard.writeText(cpnCodes[index].innerHTML);
          cpnBtn.innerHTML = "COPIED";
          setTimeout(function() {
            cpnBtn.innerHTML = "COPY CODE";
          }, 3000);
        };
      });
    </script>
  </body>
</html>
