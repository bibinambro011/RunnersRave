<html lang="en">



<head>
    <meta charset="utf-8">
    <title>Evara Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="adminassets/assets/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="adminassets/assets/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <main>
        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                   <h5><%=locals.data ? data:''%></h5>
                  

                    <h4 class="card-title mb-4"> Admin Sign in</h4>
                    <form action="/admin/login" method="post" id="loginForm">
                        <div class="mb-3">
                          <input class="form-control" placeholder="Username or email" type="text" name="email" id="email" required>
                          <p><span id="emailerror" style="color:red"></span></p>
                        </div> <!-- form-group// -->
                        <div class="mb-3">
                          <input class="form-control" placeholder="Password" type="password" name="password" id="password" required>
                          <p><span id="passworderror" style="color:red"></span></p>
                        </div> <!-- form-group// -->
                      
                        <div class="mb-4">
                          <button type="submit" class="btn btn-primary w-100" onclick="validateForm(event)">Login</button>
                        </div> <!-- form-group// -->
                      </form>
                      
                  
                </div>
            </div>
        </section>
        
    </main>
    <script src="adminassets/assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="adminassets/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="adminassets/assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="adminassets/assets/js/main.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
